<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Meal Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etMealName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., Chicken Salad"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Meal Type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Type"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerMealType"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Calories -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories *"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCalories"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., 350"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Nutrition Info (Optional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Info (Optional)"
        android:textSize="16sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Protein -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein (g)"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etProtein"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., 25.5"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Carbs -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbohydrates (g)"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCarbs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., 15.0"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Fat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat (g)"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etFat"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., 12.0"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

</LinearLayout>
