<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/nav_graph"
app:startDestination="@id/dashboardFragment" >
<fragment
    android:id="@+id/dashboardFragment"
    android:name="com.vitatrack.app.ui.dashboard.DashboardFragment"
    android:label="Home"
    tools:layout="@layout/fragment_dashboard" >

    <action
        android:id="@+id/action_dashboardFragment_to_logWaterFragment"
        app:destination="@id/logWaterFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

</fragment>
<fragment
    android:id="@+id/insightsFragment"
    android:name="com.vitatrack.app.ui.insights.InsightsFragment"
    android:label="Insights"
    tools:layout="@layout/fragment_insights" />
<fragment
    android:id="@+id/historyFragment"
    android:name="com.vitatrack.app.ui.history.HistoryFragment"
    android:label="History"
    tools:layout="@layout/fragment_history" />
<fragment
    android:id="@+id/profileFragment"
    android:name="com.vitatrack.app.ui.profile.ProfileFragment"
    android:label="Profile"
    tools:layout="@layout/fragment_profile" />
<fragment
    android:id="@+id/settingsFragment"
    android:name="com.vitatrack.app.ui.settings.SettingsFragment"
    android:label="Settings"
    tools:layout="@layout/fragment_settings" />

<!-- Log Water Fragment -->
<fragment
    android:id="@+id/logWaterFragment"
    android:name="com.vitatrack.app.ui.water.LogWaterFragment"
    android:label="Log Water"
    tools:layout="@layout/fragment_log_water" />
</navigation>